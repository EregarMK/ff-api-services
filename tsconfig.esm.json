{
	"compilerOptions": {
		"outDir": "es",
		"module": "es6",
		"target": "es5",
		"lib": [
			"es2017",
			"esnext.asynciterable",
			"dom"
		],
		"sourceMap": true,
		"allowJs": false,
		"declaration": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"lib",
		"es",
		"scripts",
		"build.js"
	],
	"types": [
		"typePatches"
	]
}
